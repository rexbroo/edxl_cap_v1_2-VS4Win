@model edxl_cap_v1_2.Models.EdxlCapMsg
@using edxl_cap_v1_2.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" type="text/css" href="css/edxl_capv1_2_refimp.css">
    <title>@ViewBag.Title="EDXL-CAP-v1.2 Reference Implementation"</title>
</head>
<body>
    @{
        <form asp-controller="EdxlCapMsg" asp-action="Index" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="content-wrapper">
                    <span class="smallText">
                        <label asp-for="Alert_Identifier" class="control-label"></label>
                        <select asp-for="Id"
                                class="form-control"
                                asp-items="@(new SelectList(@ViewBag.ListofIdentifier,"Id", "Identifier"))"></select>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="content-wrapper">
                    <input id="Submit1" type="submit" value="submit" />
                </div>
            </div>
            <div class="form-group">
                <div class="content-wrapper">
                    @if (ViewBag.SelectedValue != null)
                    {
                        <text>Selected Alert_Identifier: </text> @ViewBag.SelectedValue;
                    }
                </div>
            </div>
        </form>
    }

</body>
